<Window x:Class="Cinema.Wpf.SeatSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rezerwacja miejsc" Height="700" Width="1000" 
        WindowStartupLocation="CenterOwner" Background="WhiteSmoke">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="TxtMovieTitle" 
                   Text="Tytuł Filmu" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="0,0,20,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="LightGray" Height="30" Margin="50,0,50,30" BorderBrush="Gray" BorderThickness="1">
                    <TextBlock Text="EKRAN" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black" FontWeight="Bold"/>
                </Border>

                <UniformGrid x:Name="GridSeats" Grid.Row="1"/>
            </Grid>

            <Border Grid.Column="1" Background="White" BorderBrush="Gray" BorderThickness="1" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Wybrane miejsca:" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                    <ScrollViewer Grid.Row="1" Margin="0,0,0,10">
                        <ItemsControl x:Name="IcSelectedSeats">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="{Binding SeatDisplay}" 
                                                       VerticalAlignment="Center" 
                                                       FontWeight="Bold" 
                                                       Margin="0,0,15,0"
                                                       MinWidth="100"/>

                                            <ComboBox Grid.Column="1" 
                                                      ItemsSource="{Binding AvailableTicketTypes}" 
                                                      SelectedItem="{Binding SelectedTicketType, Mode=TwoWay}"
                                                      SelectionChanged="TicketType_SelectionChanged"
                                                      Height="25"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    <Border Grid.Row="2" Background="WhiteSmoke" Padding="10" Margin="0,0,0,20" BorderBrush="LightGray" BorderThickness="1">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="Razem: " FontWeight="Bold" FontSize="16"/>
                            <TextBlock x:Name="TxtTotalPrice" Text="0,00 zł" FontWeight="Bold" FontSize="16" Foreground="Black"/>
                        </StackPanel>
                    </Border>

                    <StackPanel Grid.Row="3">
                        <TextBlock Text="Imię i Nazwisko:" Margin="0,5,0,2"/>
                        <TextBox x:Name="TxtCustName" Height="25" Padding="2"/>

                        <TextBlock Text="Email:" Margin="0,5,0,2"/>
                        <TextBox x:Name="TxtCustEmail" Height="25" Padding="2"/>

                        <TextBlock Text="Telefon:" Margin="0,5,0,2"/>
                        <TextBox x:Name="TxtCustPhone" Height="25" Padding="2" Margin="0,0,0,15"/>
                    </StackPanel>

                    <Button Grid.Row="4" Content="Rezerwuj" Click="BtnConfirm_Click" 
                            Height="40" Background="LightGray" FontWeight="Bold" BorderBrush="Gray"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>