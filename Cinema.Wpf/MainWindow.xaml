<Window x:Class="Cinema.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cinema Manager" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen" Background="WhiteSmoke">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Background="#444444" Grid.Column="0" Padding="15">
            <StackPanel>
                <TextBlock Text="KINO SYSTEM" Foreground="White" FontSize="24" FontWeight="Bold" Margin="0,0,0,30" HorizontalAlignment="Center"/>

                <TextBlock Text="Szukaj filmu:" Foreground="LightGray" Margin="0,0,0,5"/>
                <TextBox x:Name="TxtSearch" Height="30" Margin="0,0,0,15" Padding="2"/>

                <TextBlock Text="Data seansu:" Foreground="LightGray" Margin="0,0,0,5"/>
                <DatePicker x:Name="DpDate" Height="30" Margin="0,0,0,20"/>

                <Button Content="Szukaj" Click="BtnSearch_Click" Height="35" Background="LightSlateGray" Foreground="White" FontWeight="Bold" Margin="0,0,0,10"/>

                <Separator Margin="0,20" Background="Gray"/>

                <Button Content="Eksportuj dane" Click="BtnExport_Click" Height="30" Margin="0,0,0,10"/>

                <Button Content="Panel Administratora" Click="BtnManager_Click" 
                        Height="40" Background="DarkGoldenrod" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1" Margin="20">
            <TextBlock Text="Lista seansów" FontSize="22" FontWeight="Bold" Margin="0,0,0,20"/>

            <ScrollViewer Margin="0,40,0,0">
                <ItemsControl x:Name="IcScreenings">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Gray" BorderThickness="1" Background="White" Margin="0,0,5,10" Padding="15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel>
                                        <TextBlock Text="{Binding MovieTitle}" 
                                                   FontSize="20" 
                                                   FontWeight="Bold" 
                                                   Foreground="Black" 
                                                   TextWrapping="Wrap"/>

                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="{Binding Start, StringFormat={}{0:HH:mm}}" FontSize="18" FontWeight="Bold" Foreground="DarkBlue" Margin="0,0,10,0"/>
                                            <TextBlock Text="{Binding Start, StringFormat={}{0:dd.MM.yyyy}}" FontSize="14" Foreground="DarkGray" VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <TextBlock Text="{Binding BasePrice, StringFormat='Cena biletu: {0:C}'}" Margin="0,10,0,0" Foreground="Black"/>
                                    </StackPanel>

                                    <Button Grid.Column="1" Content="Rezerwuj" Width="100" Height="30" 
                                            Click="BtnSelectSeats_Click" Tag="{Binding Id}" Margin="10,0,0,0"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>